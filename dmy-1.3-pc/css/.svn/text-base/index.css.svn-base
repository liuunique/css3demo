/*banner*/


/* fullSlide */

.fullSlide {
	width: 100%;
	position: relative;
	height: auto;
	background: #FFFFFF;
}

.fullSlide .bd {
	margin: 0 auto;
	position: relative;
	z-index: 0;
	overflow: hidden;
}

.fullSlide .bd ul {
	width: 100% !important;
	height: 450px !important;
}

.fullSlide .bd li {
	width: 100% !important;
	height: auto;
	overflow: hidden;
	text-align: center;
	background: rgb(36, 73, 150) url(../img/banner.png) no-repeat scroll center 0px;
}

.fullSlide .bd li a {
	display: block;
	height: auto;
}

.fullSlide .bd li a img {
	width: 100%;
	height: 450px;
}

.fullSlide .hd {
	width: 100%;
	position: absolute;
	z-index: 1;
	bottom: 0;
	left: 0;
	height: 30px;
	line-height: 30px;
}

.fullSlide .hd ul {
	text-align: center;
}

.fullSlide .hd ul li {
	cursor: pointer;
	display: inline-block;
	*display: inline;
	zoom: 1;
	font-size: 12px;
	width: 14px;
	height: 14px;
	border-radius: 7px;
	overflow: hidden;
	background: #FFFFFF;
	margin: 0 10px;
	overflow: hidden;
	line-height: 999px;
}

.fullSlide .hd ul .on {
	background: #3479ca;
}

.fullSlide .prev,
.fullSlide .next {
	display: block;
	position: absolute;
	z-index: 1;
	top: 50%;
	margin-top: -30px;
	left: 15%;
	z-index: 1;
	width: 40px;
	height: 60px;
	background: url(../img/logo.png) -126px -137px #000 no-repeat;
	cursor: pointer;
	filter: alpha(opacity=50);
	opacity: 0.5;
	display: none;
}

.fullSlide .next {
	left: auto;
	right: 15%;
	background-position: -6px -137px;
}
